#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_polishcoin
#build/polishcoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_polishcoin)

DEB_INSTALL_EXAMPLES_polishcoind += debian/examples/*
DEB_INSTALL_MANPAGES_polishcoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix polishcoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f polishcoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake polishcoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_polishcoin
	src/test_polishcoin

# Ensure wrapper is set executable
binary-post-install/polishcoind:
	chmod +x $(cdbs_curdestdir)usr/bin/polishcoind
binary-post-install/polishcoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/polishcoin-qt
